<!DOCTYPE html>

<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width" charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href = "~/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  </head>
  <body>
      <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Blobo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Main</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="/Basket/Index">Basket</a>
            </li>
          </ul>

          <form class="form-inline mt-2 mt-md-0" method="post" action="http://localhost:5166/Goods/List">
            <label class="text-white" for="fruits">Category: </label>
            <select class="text-dark" id="category" name="category" style="margin-left: 7px; margin-right: 20px;">
              <option class="text-dark" value="All">All</option>
              <option class="text-dark" value="Bags">Bags</option>
              <option class="text-dark" value="Clothes">Clothes</option>
              <option class="text-dark" value="Toys">Toys</option>
              <option class="text-dark" value="KitchenUtensils">Kitchen utensils</option>
            </select>
            <input class="form-control mr-sm-2" type="text" name="request" placeholder="Search" aria-label="Search">
            <input class="btn btn-outline-success my-2 my-sm-0" type="submit" value="Search"/>
          </form>
        </div>
      </nav>
    </header>
    
    <div class="container mt-5">
      @RenderBody()
    </div>
    
    <hr>

    <footer class="container">
      <p class="float-right"><a href="#">Back to top</a></p>
