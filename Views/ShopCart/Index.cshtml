@model ShopCartViewModel

<div class="container">
    @foreach (var el in Model.ShopCart.ListShopItems)
    {
        <div classs="alert alert-warning mt-3">
            <b>Good:</b> @el.Good.Name<br />
            <b>Price:</b> @el.Good.Price.ToString("c")
        </div>
    }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">Pay</div>
</div>