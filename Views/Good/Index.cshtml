@model Good

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>Price: @Model.Price.ToString("c")</p>
    <p>@Model.LongDescription</p>

    @{
        if(@Model.Availible)
        {
            <h1>Available and disavailble</h1>
        }
    }
    <p><a class="btn btn-warning" href="#">Buy</a></p>
    <p><a class="btn btn-warning" href="#">Like/dislake</a></p>
</div>