@model Order

<div>
    <h3>Checkout</h3>
    <form action="http://localhost:5166/Good/Checkout/@Model/@Model.Id." method="post" class="form-horizontal">
        <div class="form-group">
            <div class="col-md-5">
                <label for="Name">Name:</label>
                <input type="text" required id="Name" name="Name" />
            </div>
            <div class="col-md-5">
                <label for="Surname">Surname:</label>
                <input type="text" required id="Surname" name="Surname" />
            </div>
            <div class="col-md-5">
                <label for="Address">Address:</label>
                <input type="text" required id="Address" name="Address" />
            </div>
            <div class="col-md-5">
                <label for="Email">Email:</label>
                <input type="text" required id="Email" name="Email" />
            </div>
            <div class="col-md-5">
                <label for="Phone">Phone:</label>
                <input type="text" required id="Phone" placeholder="+1-234-567-8901" pattern="\+\d-\d{3}-\d{3}-\d{4}" id="Phone" name="Phone" />
            </div>
            <div class="col-md-5">
                <input class="btn btn-success" type="submit" value="Complete order" />
            </div>
        </div>
    </form>
</div>