<div class="col-md-8 order-md-1">
    <h1 class="mb-3">Checkout</h1>
    <form class="needs-validation" action="http://localhost:5166/Good/Checkout2" method="post">
        <div class="row">
              <div class="col-md-6 mb-3">
                <label for="Name">Name:</label>
                <input type="text" class="form-control" required id="Name" name="Name" />
                <div class="invalid-feedback">
                  Valid name is required.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="Surname">Surname:</label>
                <input type="text" class="form-control" required id="Surname" name="Surname" />
                <div class="invalid-feedback">
                  Valid Surname is required.
                </div>
              </div>
        </div>
        <div class="mb-3">
              <label for="Email">Email:</label>
              <input type="email" class="form-control" required id="Email" name="Email" placeholder="you@example.com"/>
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
        </div>
        <div class="mb-3">
              <label for="Phone">Phone:</label>
              <input type="text" class="form-control" required id="Phone" placeholder="+1-234-567-8901" pattern="\+\d-\d{3}-\d{3}-\d{4}" id="Phone" name="Phone" />
              <div class="invalid-feedback">
                Please enter a valid phone number for shipping updates.
              </div>
        </div>
        <div class="mb-3">
              <label for="address">Address</label>
              <input type="text" class="form-control" required id="Address" name="Address" placeholder="1234 Main St">
              <div class="invalid-feedback">
                Please enter your shipping address.
              </div>
        </div>
        <div>
                <hr class="mb-4">
                <input class="btn btn-primary btn-lg btn-block" type="submit" value="Complete order" />
        </div>
    </form>
</div>